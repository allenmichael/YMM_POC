extends layout

block content
  .app-container
    .app
        .header-actions
          h2=title
        p Welcome to #{title}
        .tab-container
          .tabs
            a.button.tab.active(data-tab-id='maintainTab', data-toggle='tab') YMM Maintenance
          .tab-view
            #maintainTab.tab-section
              if (model)
                input(type='hidden' value=JSON.stringify(model))
              
              if(product)
                input(id='productData' type='hidden' value=JSON.stringify(product))
                p You have selected #{product.productCode} - #{product.content.productName}
                p #{product.content.productName} currently has the following YMM values:
                
                p(id='ymmData')
                
                label(for="sync") Ready to sync?
                button(class="mz-button" name="sync" type="button" id="sync") Sync
            .branding-text Developed by Volusion, Inc. All rights reserved.
block additionalJavascript
  script(src='/javascripts/app.js')
    
    
